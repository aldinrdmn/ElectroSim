import java.util.Scanner;

public class ElectroSim {
    public static void main(String[] args) {
        Scanner io = new Scanner(System.in);

        System.out.print("==== Selamat Datang di ElectroSim ====\n");
        System.out.print("Masukkan jumlah alat listrik yang ingin dihitung: ");
        int jmlalat = io.nextInt();

        double[] daya = new double[jmlalat];
        double[] durasi = new double[jmlalat];
        double[] tarifharian = new double[jmlalat];
        double tarifperkwh;

        System.out.print("Silahkan masukan tarif listrik per kWh (dalam rupiah): ");
        tarifperkwh = io.nextDouble();

        for (int i = 0; i < jmlalat; i++) {
            System.out.println("\nAlat ke-" + (i + 1) + ":");
            System.out.print("Masukkan daya alat listrik (dalam watt): ");
            daya[i] = io.nextDouble();

            System.out.print("Masukkan durasi pemakaian harian (dalam jam): ");
            durasi[i] = io.nextDouble();

            tarifharian[i] = biaya(daya[i], durasi[i], tarifperkwh);
        }

        System.out.println("\n=== Estimasi Biaya Listrik ===");
        for (int i = 0; i < jmlalat; i++) {
            double tarifbulanan = tarifharian[i] * 30;
            double tariftahunan = tarifharian[i] * 365;

            System.out.printf("\nAlat ke-%d:\n", i + 1);
            System.out.printf("Biaya harian: Rp %.2f\n", tarifharian[i]);
            System.out.printf("Biaya bulanan: Rp %.2f\n", tarifbulanan);
            System.out.printf("Biaya tahunan: Rp %.2f\n", tariftahunan);
        }
       io.close();
    }

    public static double biaya(double daya, double durasi, double tarifperkwh) {
        double kwh = daya / 1000.0;
        double penggunaanperhari = kwh * durasi;
        return penggunaanperhari * tarifperkwh;
    }
}
